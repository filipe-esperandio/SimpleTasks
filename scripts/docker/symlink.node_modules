#!/usr/bin/env bash
set -e

source_node_modules=`pwd`/node_modules
target_node_modules=/home/jenkins/node_modules

mkdir -p $target_node_modules

if [[ ! -L $source_node_modules ]] && [[ -d $source_node_modules ]]; then
  echo "$source_node_modules exists and is a directory!"
  exit 1
fi

if [[ ! -L $source_node_modules ]]; then
  ln -s $target_node_modules $source_node_modules
fi
