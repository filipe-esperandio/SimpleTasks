#!/bin/bash
set -eu

: ${APP_VERSION:='0.1.0'}
perl -i -pe "s/{{APP_VERSION}}/${APP_VERSION}/" $1

: ${ENV_LABEL:='dev'}
perl -i -pe "s/{{ENV_LABEL}}/${ENV_LABEL}/" $1

: ${BUILD_NUMBER:='0000'}
perl -i -pe "s/{{BUILD_NUMBER}}/${BUILD_NUMBER}/" $1

: ${APP_NAME:='Mobile Template'}
perl -i -pe "s/{{APP_NAME}}/${APP_NAME}/" $1

