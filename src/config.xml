<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget
  xmlns     = "http://www.w3.org/ns/widgets"
  xmlns:cdv = "http://cordova.apache.org/ns/1.0"
  xmlns:gap = "http://phonegap.com/ns/1.0"
  id        = "com.example.mobiletemplate-{{ENV_LABEL}}"
  version   = "{{APP_VERSION}}"
  versionCode = "{{BUILD_NUMBER}}"
  android-versionCode = "{{BUILD_NUMBER}}"
  ios-CFBundleVersion = "{{BUILD_NUMBER}}">

  <name>{{APP_NAME}}</name>
  <description>TODO:</description>
  <author email="contact@example.com" href="https://example.com/">Example Inc.</author>
  <content src="index.html"/>
  <access origin="*" launch-external="yes"/>
  <allow-navigation href="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="android-minSdkVersion" value="14"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="3000"/>
  <preference name="StatusBarOverlaysWebView" value="true"/>
  <preference name="StatusBarStyle" value="default"/>
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <preference name="auto-hide-splash-screen" value="true"/>
  <preference name="deployment-target" value="8.0"/>
  <preference name="phonegap-version" value="cli-5.1.1"/>
  <feature name="http://api.phonegap.com/1.0/geolocation"/>
  <preference name="KeyboardDisplayRequiresUserAction" value="false" />
  <!--iOS specific preferences-->
  <gap:platform name="ios"/>
  <preference name="deployment-target" value="7.0" />
  <!--This config-file only applies to Phonegap Build configurations-->
  <gap:config-file platform="ios" parent="UIBackgroundModes" overwrite="true">
    <array>
      <string>remote-notification</string>
    </array>
  </gap:config-file>
  <gap:config-file platform="ios" parent="CFBundleVersion">
    <string>{{BUILD_NUMBER}}</string>
  </gap:config-file>
  <!--Android specific preferences -->
  <gap:platform name="android"/>
  <preference name="android-minSdkVersion" value="19" />

  <!-- NOTE: This plugin is only installed in development! In order for us to be
  able to use Crosswalk on PhoneGap Build, they require us to use their fork
  of the plugin. The problem is that we can't install that fork locally
  because it sits on PGB's plugin registry. It works if we point to their
  github repository (name="http://github.com/phonegap-build/cordova-plugin-crosswalk-webview.git)
  but then PGB does not recognize that as a valid plugin. Hopefully this will
  go away soon.

  Source: http://phonegap.com/blog/2015/06/16/phonegap-updated-on-build/-->
  <plugin name="cordova-plugin-crosswalk-webview" spec="1.2.0"/>
  <gap:plugin name="org.crosswalk.engine" version="1.3.0" source="pgb"/>
  <gap:plugin name="com.ionic.keyboard" source="npm"/>
  <gap:plugin name="cordova-plugin-appavailability" version="0.4.2" source="npm"/>
  <gap:plugin name="cordova-plugin-console" source="npm"/>
  <gap:plugin name="cordova-plugin-statusbar" source="npm"/>
  <gap:plugin name="cordova-plugin-device" source="npm"/>
  <gap:plugin name="cordova-plugin-geolocation" source="npm"/>
  <gap:plugin name="cordova-plugin-splashscreen" source="npm"/>
  <gap:plugin name="cordova-plugin-whitelist" version="1.0.0" source="npm"/>
  <gap:plugin name="cordova-plugin-screen-orientation" source="npm"/>
  <gap:plugin name="pushwoosh-cordova-plugin" version="3.6.4" source="npm" />
  <gap:plugin name="cordova-plugin-network-information" source="npm"/>
  <gap:plugin name="cordova-plugin-app-version" version="0.1.7" source="npm"/>
  <gap:plugin name="cordova-plugin-market" version="1.1.2" source="npm"/>

  <platform name="ios">
    <icon src="resources/ios/icon-{{ENV_LABEL}}/icon.png"/>
    <splash src="resources/ios/splash-{{ENV_LABEL}}/Default-Portrait.png"/>
  </platform>
  <icon gap:platform="ios" src="resources/ios/icon-{{ENV_LABEL}}/icon.png"/>
  <gap:splash gap:platform="ios" src="resources/ios/splash-{{ENV_LABEL}}/Default-Portrait.png"/>

  <platform name="android">
    <icon src="resources/android/icon-{{ENV_LABEL}}/drawable.png"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" density="land-ldpi"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" density="land-mdpi"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" density="land-hdpi"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" density="land-xhdpi"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" density="land-xxhdpi"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" density="land-xxxhdpi"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" density="port-ldpi"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" density="port-mdpi"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" density="port-hdpi"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" density="port-xhdpi"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" density="port-xxhdpi"/>
    <splash src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" density="port-xxxhdpi"/>
  </platform>

  <icon gap:platform="android" src="resources/android/icon-{{ENV_LABEL}}/drawable.png" gap:qualifier="ldpi"/>
  <icon gap:platform="android" src="resources/android/icon-{{ENV_LABEL}}/drawable.png" gap:qualifier="mdpi"/>
  <icon gap:platform="android" src="resources/android/icon-{{ENV_LABEL}}/drawable.png" gap:qualifier="hdpi"/>
  <icon gap:platform="android" src="resources/android/icon-{{ENV_LABEL}}/drawable.png" gap:qualifier="xhdpi"/>
  <icon gap:platform="android" src="resources/android/icon-{{ENV_LABEL}}/drawable.png" gap:qualifier="xxhdpi"/>
  <icon gap:platform="android" src="resources/android/icon-{{ENV_LABEL}}/drawable.png" gap:qualifier="xxxhdpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" gap:qualifier="land-ldpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" gap:qualifier="land-mdpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" gap:qualifier="land-hdpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" gap:qualifier="land-xhdpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" gap:qualifier="land-xxhdpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-land.png" gap:qualifier="land-xxxhdpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" gap:qualifier="port-ldpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" gap:qualifier="port-mdpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" gap:qualifier="port-hdpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" gap:qualifier="port-xhdpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" gap:qualifier="port-xxhdpi"/>
  <gap:splash gap:platform="android" src="resources/android/splash-{{ENV_LABEL}}/drawable-port.png" gap:qualifier="port-xxxhdpi"/>
</widget>
